{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-eslint-rules"
  ],
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "rules": {
    "prettier": true,
    "no-console": false,
    "no-var-requires": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [
      true,
      "single"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "interface-name": false,
    "max-line-length": [
      true,
      120
    ],
    "member-access": [
      true,
      "check-accessor",
      "check-constructor"
    ],
    "no-empty": false,
    "no-unused-expression": false,
    "array-type": [
      true,
      "array-simple"
    ],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "max-classes-per-file": false
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**",
      "build/**",
      "dist/**",
      "coverage/**"
    ]
  }
}